{
  "name": "backend",
  "version": "1.0.0",
  "author": "Tiago Rodrigues Cunha <tiago.r.c.sn@gmail.com>",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "dev": "nodemon --watch \"src/\" --exec \"ts-node src/entry.ts\" -e ts",
    "test": "jest --no-cache",
    "build": "sucrase ./src -d ./dist --transforms typescript,imports",
    "prod": "yarn run build && node dist/entry.js"
  },
  "jest": {
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "testRegex": "\\.test\\.ts",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "jest": "^24.9.0",
    "supertest": "^4.0.2",
    "ts-jest": "^24.2.0",
    "ts-node": "^8.5.4",
    "typescript": "^3.7.3"
  },
  "devDependencies": {
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.2",
    "@types/jest": "^24.0.23",
    "@types/supertest": "^2.0.8",
    "nodemon": "^2.0.2",
    "sucrase": "^3.10.1"
  }
}
